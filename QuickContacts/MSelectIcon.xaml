<?xml version="1.0" encoding="UTF-8"?>
<ContentView
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="QuickContacts.MSelectIcon"
	BackgroundColor="#00FFA500">

	<StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="0, 0, 10, 0" Spacing="0">
		<Image x:Name="seImage" 
				WidthRequest="25" 
				HeightRequest="25" />
	</StackLayout>

    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnMSelectIconTapped" />
    </ContentView.GestureRecognizers>

</ContentView>
